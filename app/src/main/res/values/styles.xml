<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteTextStyle">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WhiteTextStyle.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgeTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitleTextStyle" parent="WhiteTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="BackTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="alpha">0.5</item>
    </style>

    <style name="GenreTextStyle">
        <item name="android:textColor">@color/genre_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallGenreTextStyle">
        <item name="android:textColor">@color/genre_text_color</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="ReviewsTextStyle">
        <item name="android:textColor">@color/reviews_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SmallReviewsTextStyle">
        <item name="android:textColor">@color/reviews_text_color</item>
        <item name="android:textSize">8sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="HeadersTextStyle" parent="WhiteTextStyle.14">
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="DescriptionTextStyle" parent="WhiteTextStyle.14">
        <item name="android:alpha">0.75</item>
    </style>

    <style name="ActorNameTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/actor_name_text_color</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="MovieCardTimeTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/movie_card_time_text</item>
        <item name="textAllCaps">true</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
</resources>